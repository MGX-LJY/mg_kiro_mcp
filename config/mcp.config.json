{
  "server": {
    "name": "mg_kiro_mcp",
    "version": "1.0.0",
    "port": 3000,
    "host": "localhost",
    "protocol": "http",
    "cors": {
      "enabled": true,
      "origins": ["*"]
    }
  },
  "mcp": {
    "protocol_version": "2024-11-05",
    "capabilities": {
      "logging": {},
      "prompts": {},
      "resources": {},
      "tools": {}
    },
    "client_info": {
      "name": "claude-code",
      "version": "1.0.0"
    }
  },
  "auth": {
    "enabled": false,
    "api_key": "",
    "rate_limit": {
      "enabled": true,
      "max_requests": 100,
      "time_window": 60
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "file": {
      "enabled": true,
      "path": "./logs/mcp-server.log",
      "max_size": "10mb",
      "max_files": 5
    },
    "console": {
      "enabled": true,
      "colorize": true
    }
  },
  "features": {
    "hot_reload": true,
    "health_check": true,
    "metrics": true
  },
  "file_analysis": {
    "enabled": true,
    "token_calculation": {
      "precise_mode": true,
      "language_specific": true,
      "cache_enabled": true,
      "cache_duration": 3600
    },
    "batch_strategies": {
      "small_file_threshold": 15000,
      "large_file_threshold": 20000,
      "batch_target_size": 18000,
      "function_boundary_detection": true,
      "smart_grouping": true
    },
    "task_management": {
      "unified_validation": true,
      "auto_completion": true,
      "progress_tracking": true,
      "error_recovery": true
    }
  },
  "services": {
    "file_analysis_module": {
      "enabled": true,
      "priority": 1
    },
    "unified_task_manager": {
      "enabled": true,
      "priority": 2
    },
    "task_validator": {
      "enabled": true,
      "validation_strategies": [
        "Step3FolderValidator",
        "Step4ModuleValidator", 
        "Step5FixedFileValidator",
        "Step6ArchitectureValidator"
      ]
    }
  }
}